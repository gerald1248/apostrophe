{
  "manifest_version": 3,
  "name": "Apostrophe",
  "version": "1.0.0",
  "description": "Curly punctuation marks for typography fans.",
  "permissions": [
    "clipboardWrite"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Apostrophe",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": []
}
